{% extends 'base.html.twig' %}

{% block title %}Picture index{% endblock %}

{% block body %}
    <h1>Picture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>Caption</th>
                <th>FileName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td>{{ picture.createdAt ? picture.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ picture.caption }}</td>
                <td>{{ picture.fileName }}</td>
                <td>
                    <a href="{{ path('picture_show', {'id': picture.id}) }}">show</a>
                    <a href="{{ path('picture_edit', {'id': picture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('picture_new') }}">Create new</a>
{% endblock %}
